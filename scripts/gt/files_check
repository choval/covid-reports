#!/usr/bin/env php
<?php
/**
 * Guatemala's files are from a covid-19 dedicated section
 */
chdir(__DIR__ .'/../../');
date_default_timezone_set('UTC');

$reports = glob('reports/gt/*', GLOB_ONLYDIR);
foreach ($reports as $path) {
    $discarded = $path.'/discarded.txt';
    if (is_file($discarded)) {
        continue;
    }
    $checked = $path.'/checked.txt';
    if (!is_file($checked)) {
        touch($checked);
    }
}
